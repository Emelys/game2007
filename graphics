from tkinter import *
#from settings import PLAYERS_COUNT
#from settings import IP, PORT, PLAYERS_COUNT, END_SYMBOL, PLAYERS_COUNT
#from hanabi_server import *


def create_desk():
    root = Tk()
    
    informations = Label(root, text = 'Я солнышко! Красное как пельмень!', width = 159, height = 4, bg = 'brown')
    desk = Canvas(root, width = 1280, height = 720, bg = "darkgreen")
    hints = Label(root, width = 30, height = 44, bg = 'brown')
    
    hints.pack(side = 'right', fill = 'both')
    desk.pack()
    informations .pack()

    root.mainloop()

#def do_move():
    
create_desk()
